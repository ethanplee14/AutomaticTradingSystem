    "module": "commonjs",
    "preserveConstEnums": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "ES2020",
    "allowJs": true,
    "declaration": true,
    "strict": true,
    "strictNullChecks": true
  },
  "include": ["**/*"],
  "exclude": ["./dist" ,"./node_modules", "./tests"]
}
